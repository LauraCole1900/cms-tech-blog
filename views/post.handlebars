<div class="post">
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>{{thisPost.title}}</h2>
      <div>
        Posted {{formatDate thisPost.createdAt}} by {{thisPost.user.user_name}}
      </div>
    </div>
    <div class="card-body">
      {{thisPost.content}}
    </div>
  </article>

  {{#if thisPost.Comments}}
    <section class="card">
      <div class="card-header">
        <h3>Comments</h3>
      </div>

      <div class="card-body">
        {{#each thisPost.Comments}}
          <div>
            <p>
              {{body}}
            </p>
            <p>
              &mdash; {{User.username}}, {{formatDate createdAt}}
            </p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}

  <form id="new-comment-form" class="card">
    <div class="card-header">
      <h3>Add New Comment</h3>
    </div>

    <div class="card-body">
      <input type="hidden" name="post-id" value="{{thisPost.id}}" />

      <label class="form-label" for="comment-body">Comment</label>

      <textarea name="comment-body" class="form-input"></textarea>

      <button type="submit" class="btn">Submit</button>
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>