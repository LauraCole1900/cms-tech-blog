<div class="post card formCard">
  <div class="card-header">
    <h2>Create new post</h2>
  </div>
  <form id="new-post-form" class="card-body">
    <label class="form-label" for="post-title">Title</label>
    <input type="text" name="post-title" class="form-control" id="title" />

    <label class="form-label" for="post-body">Content</label>
    <textarea name="post-body" class="form-control" id="body"></textarea>

    <button type="submit" class="btn">Submit</button>
  </form>
</div>

<script src="/js/blogForm.js"></script>