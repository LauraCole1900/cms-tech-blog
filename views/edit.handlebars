<div class="card formCard">
  <div class="card-header">
    <div class="row justify-content-between">
    <div class="col-10">
      <h2>Edit Post</h2>
    </div>
    <div class="col-2">
      <button type="button" id="delete" class="btn">Delete</button>
    </div>
    </div>
  </div>
  <form id="editForm" class="card-body">
    <input type="hidden" name="postId" id="postId" value="{{post.id}}" />

    <label class="form-label" for="postTitle">Title</label>
    <input class="form-control" type="text" name="postTitle" id="title" value="{{post.title}}" />

    <label class="form-label" for="postContent">Content</label>
    <textarea class="form-control" rows="10" name="postContent" id="content">{{post.content}}</textarea>

    <button type="submit" class="btn">Update</button>

  </form>
</div>

<script src="/js/editForm.js"></script>